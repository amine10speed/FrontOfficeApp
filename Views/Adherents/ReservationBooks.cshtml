@{
    ViewData["Title"] = "Reservations books";
}
<!DOCTYPE html>
<html lang="en">
<!-- body -->
<body class="main-layout home_page">

    <!-- header -->
    @Html.Partial("_Header")

    <!-- end header -->
    <div class="borrow mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-10 offset-md-1">
                    <div class="aboutheading">
                        <h2>Reservations <strong class="black">Books</strong></h2>
                    </div>
                </div>
            </div>
             
            <table id="dtBasicExample" class="table table-bordered table-striped table-sm" cellspacing="0">
                <thead>
                    <tr>
                        <th class="col-1" scope="col">#</th>
                        <th scope="col">Books name</th>
                        <th class="col-2" scope="col">Reservation date</th>
                        <th class="col-2" scope="col">Borrow date</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 1; // Counter for row numbers
                    }
                    @foreach (var reservation in Model)
                    {
                    <tr>
                        <th scope="row">@i</th>
                        <td>@reservation.Livre.Titre</td>
                        <td>@reservation.DateReservation.ToString("d")</td>
                        <td>
                                <a class="btn btn-warning btn-sm" asp-area="" asp-controller="Adherents" asp-action="GetHTMLPageAsPdf" asp-route-id="@reservation.ReservationID">Generer</a>

                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- footer -->
    @Html.Partial("_Footer")

</body>
</html>

