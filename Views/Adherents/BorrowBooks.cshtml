@{
    ViewData["Title"] = "Borrow books";
}
<!DOCTYPE html>
<html lang="en">
<!-- body -->
<body class="main-layout home_page">

    <!-- header -->
    @Html.Partial("_Header")
    <!-- end header -->
    <div class="borrow mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-10 offset-md-1">
                    <div class="aboutheading">
                        <h2>Borrow <strong class="black">Books</strong></h2>
                    </div>
                </div>
            </div>
            <table id="dtBasicExample" class="table table-bordered table-striped table-sm" cellspacing="0">
                <thead>
                    <tr>
                        <th class="col-1" scope="col">#</th>
                        <th class="col-7" scope="col">Book's Name</th>
                        <th class="col-2" scope="col">Borrow Date</th>
                        <th class="col-2" scope="col">Return Date</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 1; // Counter for row numbers
                    }
                    @foreach (var emprunt in Model)
                    {
                        <tr>
                            <th scope="row">@i</th>
                            <td>@emprunt.Livre.Titre</td> <!-- Assuming 'Livre' is the related book entity -->
                            <td>@emprunt.DateEmprunt.ToString("d")</td> <!-- Formatting the date assuming 'DateEmprunt' is a DateTime -->
                            <td>@emprunt.DateRetourPrevu.ToString("d")</td> <!-- Formatting the date assuming 'DateRetourPrevu' is a DateTime -->
                        </tr>
                        i++; // Increment the counter after each row is written
                    }
                </tbody>
            </table>

        </div>
    </div>
    <!-- footer -->
    @Html.Partial("_Footer")
    

    
</body>
</html>

